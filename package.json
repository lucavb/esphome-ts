{
    "name": "esphome-ts",
    "version": "2.2.0",
    "description": "A TypeScript client for the Esphome Native API interface",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "repository": "https://github.com/lucavb/esphome-ts",
    "files": [
        "dist/*"
    ],
    "scripts": {
        "build": "npx tsc",
        "test": "npx jest --config jest.config.json",
        "clean": "rm -rf dist",
        "cbuild": "npm run clean && npm run build",
        "format": "npx eslint --fix src/**/*.ts test/**/*.ts",
        "prepack": "npm run format && npm run cbuild"
    },
    "keywords": [
        "esphome",
        "typescript"
    ],
    "author": "Luca Becker <luca.becker@sunbury.xyz> (https://sunbury.xyz/)",
    "license": "GPL-3.0",
    "dependencies": {
        "color-convert": "2.0.1",
        "rxjs": "6.6.3"
    },
    "devDependencies": {
        "@types/color-convert": "2.0.0",
        "@types/jest": "26.0.20",
        "@types/node": "14.14.30",
        "@typescript-eslint/eslint-plugin": "4.15.1",
        "@typescript-eslint/parser": "4.15.1",
        "eslint": "7.20.0",
        "eslint-config-google": "0.14.0",
        "eslint-config-prettier": "7.2.0",
        "eslint-plugin-import": "2.22.1",
        "eslint-plugin-prettier": "3.3.1",
        "eslint-plugin-unused-imports": "1.1.0",
        "jest": "26.6.3",
        "jest-junit": "12.0.0",
        "prettier": "2.2.1",
        "ts-jest": "26.5.1",
        "ts-proto": "1.67.0",
        "typescript": "4.1.5"
    }
}
